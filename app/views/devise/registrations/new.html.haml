.Wrapper
  .AccountPage
    .AccountPage__header
      %h1
        = link_to root_path do
          = image_tag '/assets/logo/logo.png', class: 'header__logo'
      -# %h2 Create Account
      -# = render "devise/shared/links"
    .AccountPage__form
      %h2 会員情報の入力
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .FormField
          .FormField__content
            .FormField__label--normal
              = f.label :ニックネーム
              %span 必須
            .FormField__input--normal
              = f.text_field :nickname, autofocus: true, placeholder: "例）フリマたろう"
            .FormField
              .FormField__label--normal
                = f.label :メールアドレス
                %span 必須
              .FormField__input--normal
                = f.email_field :email, placeholder: "PC・携帯どちらでも可"
            .FormField
              .FormField__label--normal
                = f.label :パスワード
                %span 必須
              .FormField__input--normal
                = f.password_field :password, autocomplete: "off", placeholder: "7文字以上の英数字"
                %p.form__info--text ※英字と数字両方含めて設定してください
            .FormField
              .FormField__label--normal
                = f.label :パスワード再確認
                %span 必須
              .FormField__input--normal
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードを再入力"
              .actions
                = f.submit "新規登録", class: 'Button UserButton'
    .AccountPage__footer
      %nav
        %ul
          %li
            =link_to '#', class:'about-furima__privacy-policy' do
              プライバシーポリシー
          %li
            =link_to '#', class:'about-furima__rule' do
              FURIMA利用規約
          %li
            =link_to '#', class:'about-furima__point-rule' do
              特定商取引に関する表記
      = link_to root_path do
        = image_tag '/assets/logo/logo-white.png', class:'footer-logo'
      .footer__company-logo
        © FURIMA
