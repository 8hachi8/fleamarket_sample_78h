.Wrapper
  .AccountPage
    .AccountPage__header
      %h1
        = link_to root_path do
          = image_tag '/assets/logo/logo.png', class: 'header__logo'
      -# %h2 Log in
      -# = render "devise/shared/links"
    .AccountPage__form
      .AccountPage__new
        %p アカウントをお持ちでない方はこちら
        =link_to new_user_registration_path, class:'Account__new--btn' do
          新規会員登録
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__content
            .FormField__label--normal
              = f.label :メールアドレス
            .FormField__input--normal
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .FormField
              .FormField__label--normal
                = f.label :パスワード
              .FormField__input--normal
                = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
            .actions
              = f.submit "ログイン", class: 'Button UserButton'
    .AccountPage__footer
      %nav
        %ul
          %li
            =link_to '#', class:'about-furima__privacy-policy' do
              プライバシーポリシー
          %li
            =link_to '#', class:'about-furima__rule' do
              FURIMA利用規約
          %li
            =link_to '#', class:'about-furima__point-rule' do
              特定商取引に関する表記
      = link_to root_path do
        = image_tag '/assets/logo/logo-white.png', class:'footer-logo'
      .footer__company-logo
        © FURIMA
