-# ヘッダーは部分テンプレートにする
.header
  .header-inner
    .header-main
      = image_tag '/assets/logo/logo.png', class: 'header-main__logo'
      .header-main__search-box
        = form_with url: '#', method: :get, local: true do |f|
          = f.text_field :keyword, class:'header-main__search-box--input', placeholder:"キーワードから探す"
          = image_tag '/assets/icon/icon-search 1.png', class:'header-main__search-box--submit'
      .header-main__submit-btn
    .header-navigation
      %ul.search-list
        %li.search-list__category
          カテゴリー
        %li.search-list__brand
          ブランド
      %ul.login-box
        %li.login-box__login
          ログイン
        %li.login-box__registration
          新規会員登録
.toppage-body
  .sell-btn
    .sell-btn__text
      出品する
    = image_tag '/assets/icon/icon_camera.png', class:'sell-btn__icon'
  .main-image
    .main-image__text-box
      .main-image__text-box__headline
        %h2 人生を変えるフリマアプリ
      .main-image__text-box__text
        FURIMAはだれでもかんたんに出品・購入できる
        %br
        フリマアプリです
    .main-icons
      =image_tag '/assets/icon/Download_on_the_App_Store_Badge_US-UK_blk_092917.png', class:'main-icons__apple'
      =image_tag '/assets/icon/google-play-badge.png', class:'main-icons__google'
  .reason-box
